<%= flash[:notice] %>
<main>
<h1>Books</h1>
<div class="box-index">
 <table>
 <tr>
  <th class="th-title">Title</th>
  <th class="th-body">Body</th>
 </tr>
 <% @books.each do |book| %>
 <tr>
  <td>
   <%= book.title %>
  </td>
  <td>
   <%= book.body %>
  </td>
  <td class="tdshow">
  <%= link_to "Show", book_path(book.id), class: "show_#{book.id}" %></td>
  </td>
  <td class="tdedit">
  <%= link_to "Edit",edit_book_path(book.id),class: "edit_#{book.id}" %></td>
  </td>
  <td class="tddestroy">
  <%= link_to "Destroy",book_path(book),method: :delete, "data-confirm" => "Are you sure？"%>
  </td>
 </tr>
 <% end %>
 </table>


 <h3>New book<h3>
 <div class=form-index>
  <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
<ul>
<% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
<% end %>

    <h4>Title</h4>
    <div class="text-field">
    <%= f.text_field :title %>
    </div>
 
    <h4>Body</h4>
    <div class="text-field">
    <%= f.text_area :body %>
    </div>

    <p><%= f.submit '投稿' %><p>
 
  <% end %>
 </div>
</div>